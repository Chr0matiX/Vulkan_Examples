{  
    "version": "0.2.0",  
    "configurations": [  
        {  
            "name": "Debug Vulkan Example",  
            "type": "cppdbg",  
            "request": "launch",  
            "program": "${workspaceFolder}/build/bin/${input:exampleName}.exe",  
            "args": [],  
            "stopAtEntry": false,  
            "cwd": "${workspaceFolder}",  
            "environment": [  
                {  
                    "name": "VULKAN_SDK",  
                    "value": "${env:VULKAN_SDK}"  
                }  
            ],  
            "externalConsole": false,  
            "MIMode": "gdb",  
            //"miDebuggerPath": "D:/AppUser/VSCode-Portable/tool_user/mingw64/bin/gdb.exe",  
			"miDebuggerPath": "${env:DevTools}/mingw64/bin/gdb.exe",  
            "setupCommands": [  
                {  
                    "description": "Enable pretty-printing for gdb",  
                    "text": "-enable-pretty-printing",  
                    "ignoreFailures": true  
                }  
            ],  
            //"preLaunchTask": "build"  
        }  
    ],  
    "inputs": [  
        {  
            "id": "exampleName",  
            "description": "Example name",  
            "default": "triangle",  
            "type": "promptString"  
        }  
    ]  
}